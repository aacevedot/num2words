<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        xmlns:local="clr-namespace:WpfClient"
        mc:Ignorable="d"
        Title="Converter"
        Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid HorizontalAlignment="Right" Width="800" Background="#222831">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
            <RowDefinition Height="110" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>

        <emoji:TextBlock x:Name="PrimaryText"
                         Grid.Row="0" Margin="30"
                         VerticalAlignment="Center"
                         TextAlignment="Center"
                         TextWrapping="Wrap"
                         FontSize="24"
                         Foreground="#EEEEEE"
                         Text="Loading... ⌛" />

        <emoji:TextBlock x:Name="SecondaryText"
                         Grid.Row="1" Margin="10"
                         VerticalAlignment="Top"
                         TextAlignment="Center"
                         TextWrapping="Wrap"
                         FontSize="14"
                         FontStyle="Italic"
                         Foreground="#EEEEEE"
                         Text="" />

        <StackPanel Grid.Row="2"
                    FocusManager.FocusedElement="{Binding ElementName=InputField}">
            <Border CornerRadius="10"
                    Width="350" Height="30"
                    Background="#393E46">

                <Grid>
                    <TextBox x:Name="InputField"
                             Width="320"
                             Margin="1"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             Padding="5"
                             Foreground="#CFCFCF" />

                    <TextBlock IsHitTestVisible="False"
                               Text="Example: 999 999 999,99"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="10,0,0,0"
                               FontSize="11"
                               Foreground="#60646A">

                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=InputField}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="Visibility" Value="Hidden" />
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <Button x:Name="ConvertButton"
                    Content="Convert"
                    FontSize="14"
                    FontWeight="Medium"
                    Width="150" Margin="10"
                    Click="ConvertButton_Click">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#EEEEEE" />
                        <Setter Property="Background" Value="#00ADB5" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#009BA2" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="100" Height="25"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,25,10">

            <TextBlock x:Name="ServerLabel"
                       Foreground="DarkGray"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Text="Server:" />

            <Border CornerRadius="10"
                    Width="175" Height="20"
                    Margin="0,0,15,0"
                    Background="#393E46">

                <Grid>
                    <TextBox x:Name="ServerInput"
                             Width="150"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             Foreground="#CFCFCF"
                             Text="" />
                </Grid>
            </Border>

            <Button x:Name="ChangeServerButton"
                    Content="Change"
                    FontSize="12"
                    FontWeight="Medium"
                    Click="ChangeServerButton_Click">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#EEEEEE" />
                        <Setter Property="Background" Value="#393E46" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33373F" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="80" Height="20"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>